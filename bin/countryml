#!/usr/bin/env perl

use strict;
use warnings;
use diagnostics;

# use utf8;
# use Encode::StdIO;
use Locale::Country::Multilingual;
use HTML::Entities;

print "Content-type: text/html; charset=UTF-8\n";

print "<HTML><BODY>";
my $l = Locale::Country::Multilingual->new(use_io_layer => 1);
my $foo = $l->country2code('Austria', 'en');
print encode_entities($l->code2country($foo, 'da')) . "\n";
# print decode_entities('&Atilde;&#152;strig');
# print $l->code2country($foo, 'da') . "\n";

$foo = $l->country2code('Australia', 'en');
print encode_entities($l->code2country($foo, 'ja')) . "\n";

print $l->country2code('Netherlands', 'en');

print "</BODY></HTML>\n";
