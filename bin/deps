#!/usr/bin/env perl

use strict;
use warnings;

use autodie qw(:all);
use Data::Dumper;
use File::Slurp;
use File::Temp;

my ($fh, $filename) = File::Temp::tempfile();

system("scandeps.pl -R lib/CGI/Info.pm > $filename");

my $config = eval('{' . File::Slurp::read_file($filename) . '}');

close $fh;
unlink $filename;

print Data::Dumper->new([$config])->Dump();
