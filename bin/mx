#!/usr/bin/env perl -w
# #!/usr/bin/perl -wT

# Print the MX record for the given hostname

use strict;
use autodie qw(:all);

use Net::DNS;
my $res = Net::DNS::Resolver->new();
my @mx = mx($res, $ARGV[0]);

foreach (@mx) {
	print "preference = ", $_->preference, ' ';
	my $ip = $_->exchange;
	print "exchange = $ip";
	foreach ($res->search($ip)->answer) {
		if($_->type eq 'A') { print ' ', $_->address };
	}
	print "\n";
}
