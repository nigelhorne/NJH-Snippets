#!/usr/bin/env bash

if [ x$TMPDIR = 'x' ]; then
	if [[ -d $HOME/tmp ]]; then
		export TMPDIR=$HOME/tmp
	else
		export TMPDIR=/tmp
	fi
fi

LOCKFILE=${TMPDIR}/cpan-test.lck
if test -e ${LOCKFILE} && kill -0 `cat ${LOCKFILE}`; then
	echo "Already running"
	exit 0
fi

# make sure the lockfile is removed when we exit and then claim it
trap "rm -f ${LOCKFILE}; exit" INT TERM ALRM EXIT
echo $$ > ${LOCKFILE}


. ~/perl5/perlbrew/etc/bashrc

export CPAN_SQLITE_NO_LOG_FILES=1

if [ $UID -eq 0 ]; then
	cpan CGI::Lingua CGI::Info FCGI::Buffer CGI::Buffer HTML::SocialMedia YAML::XS YAML Class::MOP CHI::Driver::BerkeleyDB DB_File BerkeleyDB Data::ICal CGI::Untaint::CountyStateProvince CGI::Untaint::CountyStateProvince::GB IO::Lambda Template JavaScript::Packer HTML::Packer HTML::Clean CSS::Packer Locale::Codes CGI::Untaint HTML::Entities LWP::UserAgent Locale::Country HTTP::Cache::Transparent File::Glob File::HomeDir Bundle::LWP Bundle::libnet Bundle::CPANReporter2 CGI::Alert CGI::Untaint::CountyStateProvince::US CGI Mail::Address Email::Address Email::Valid DBD::CSV Locale::SubCountry warnings utf8 Compress::Zlib Log::Log4perl Log::Dispatch::File Log::Dispatch::Email::MailSendmail XML::Parser::EasyTree DBD::AnyData Bundle::LWP Bundle::CPANReporter2 Business::PayPal Digest Locale::Codes CGI::Untaint::Twitter CGI::Untaint::Facebook Test::Reporter::Transport::Metabase Mozilla::CA IO::Socket::SSL WWW::Mechanize::SpamCop Data::Throttler Locale::Country::Multilingual Config::Auto HTML::Adsense Text::Unidecode Linux::loadavg Lingua::EN::Inflect::Number List::Compare Cache::Memcached Mo::default URI::ParseSearchString File::Which HTML::CheckArgs Mail::RFC822::Address IO::Socket::INET6 Socket IO::Socket::IP Log::Dispatch::Email::Sendmail LWP::Parallel::UserAgent IP::Country String::Clean::XSS CGI::IDS Text::xSV::Slurp String::EscapeCage Data::Validate::URI Class::Autouse prefork Date::ICal CHI::Driver::Memcached CHI::Driver::Redis File::Slurp FCGI Net::Twitter::Lite::WithAPIv1_1 Crypt::SSLeay Date::Calc Error LWP::UserAgent::CHICaching Lingua::EN::PluralToSingular CGI::ACL Class::Simple Log::Any::Adapter::Log4perl Database::Abstraction Log::Log4perl::Layout::SyslogCHI::Driver::SharedMem DateTime::Format::Text.pm Template::Plugin::EnvHash
else
	if [ $1x == x ]
	then
		LIST=`perlbrew list`
	else
		LIST=$*
	fi

	for i in $LIST
	do
		echo $i:
		perlbrew use $i
		rm -f ~/.cpan/prefs/disabled.yml&
		cpan CGI::Lingua CGI::Info FCGI::Buffer CGI::Buffer HTML::SocialMedia YAML::XS YAML Class::MOP CHI::Driver::BerkeleyDB DB_File BerkeleyDB Data::ICal CGI::Untaint::CountyStateProvince CGI::Untaint::CountyStateProvince::GB IO::Lambda Template JavaScript::Packer HTML::Packer HTML::Clean CSS::Packer Locale::Codes CGI::Untaint HTML::Entities LWP::UserAgent Locale::Country HTTP::Cache::Transparent File::Glob File::HomeDir Bundle::LWP Bundle::libnet Bundle::CPANReporter2 CGI::Alert CGI::Untaint::CountyStateProvince::US CGI Mail::Address Email::Address Email::Valid DBD::CSV Locale::SubCountry warnings utf8 Compress::Zlib Log::Log4perl Log::Dispatch::File Log::Dispatch::Email::MailSendmail XML::Parser::EasyTree DBD::AnyData Bundle::LWP Bundle::CPANReporter2 Business::PayPal Digest Locale::Codes CGI::Untaint::Twitter CGI::Untaint::Facebook Test::Reporter::Transport::Metabase Mozilla::CA IO::Socket::SSL WWW::Mechanize::SpamCop Data::Throttler Locale::Country::Multilingual Config::Auto HTML::Adsense Text::Unidecode Linux::loadavg Lingua::EN::Inflect::Number List::Compare Cache::Memcached Mo::default URI::ParseSearchString File::Which HTML::CheckArgs Mail::RFC822::Address IO::Socket::INET6 Socket IO::Socket::IP Log::Dispatch::Email::Sendmail LWP::Parallel::UserAgent IP::Country String::Clean::XSS CGI::IDS Text::xSV::Slurp CGI::EscapeCage Data::Validate::URI Class::Autouse prefork Date::ICal CHI::Driver::Memcached CHI::Driver::Redis File::Slurp FCGI Net::Twitter::Lite::WithAPIv1_1 Crypt::SSLeay Date::Calc Error LWP::UserAgent::CHICaching Lingua::EN::PluralToSingular Data::ICal CGI::ACL Class::Simple Log::Any::Adapter::Log4perl Database::Abstraction Log::Log4perl::Layout::SyslogCHI::Driver::SharedMem DateTime::Format::Text.pm Template::Plugin::EnvHash
	done

	li -r0l $HOME/perl5/perlbrew
fi

rm -f ${LOCKFILE}
